<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/lancheira_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/data_da_lancheira"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/lancheira_construtores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/construtores"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/lancheira_reguladores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reguladores"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/lancheira_energeticos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/energ_ticos"
            android:layout_marginTop="4dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
